      { src: '/images/cust_logo/hwf.png' },
      { src: '/images/cust_logo/mcic.png' },
      { src: '/images/cust_logo/mh.png' },
      { src: '/images/cust_logo/monta.png' },
      { src: '/images/cust_logo/nstda.png' },
      { src: '/images/cust_logo/nxpo.png' },
      { src: '/images/cust_logo/optima.png' },
      { src: '/images/cust_logo/rex.png' },
      { src: '/images/cust_logo/rjc.png' },
      { src: '/images/cust_logo/shm.png' },
      { src: '/images/cust_logo/sqp.png' },
      { src: '/images/cust_logo/thaiev.png' },
      { src: '/images/cust_logo/tint.png' },
      { src: '/images/cust_logo/tti.png' },
